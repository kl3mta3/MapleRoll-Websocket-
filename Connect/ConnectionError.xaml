<Window x:Name="ConnectionError1" x:Class="MapleRoll2.Connect.ConnectionError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapleRoll2.Connect"
        mc:Ignorable="d"
        Title="ConnectionError" Height="150" Width="150" ResizeMode="NoResize" Topmost="True" Foreground="Black" Background="Black">
    <Grid>
        <Button x:Name="btn_Okay" Content="Okay" HorizontalAlignment="Center" Margin="0,91,0,0" Background="Black" Foreground="White" Click="btn_Okay_Click" Width="46" Height="20" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Error" Content="Error Connecting to" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Height="32" Width="140" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
        <Label x:Name="lbl_Error_Copy" Content="Server or Group" HorizontalAlignment="Center" VerticalAlignment="Top" Height="39" Width="114" FontWeight="SemiBold" FontSize="14" Foreground="White" Margin="0,58,0,0"/>
        <Label x:Name="lbl_ConnectionErrorTitle" Content="Connection Error" VerticalAlignment="Top" FontSize="14" FontWeight="ExtraBold" HorizontalAlignment="Center" Foreground="#FFF41111" Margin="0,18,0,0"/>
        <Label x:Name="lbl_Error_Copy1" Content="Oh, no!! :(" HorizontalAlignment="Center" VerticalAlignment="Top" Height="31" Width="74" FontWeight="SemiBold" FontSize="14" Foreground="White" Margin="0,-1,0,0"/>

    </Grid>
</Window>
