<Window x:Class="MapleRoll2.Connect.MapleRollConnect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapleRoll2.Connect"
        mc:Ignorable="d"
        Title="MapleRoll(Connect)" Height="218" Width="210" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" MouseDown="Window_MouseDown" Background="{x:Null}">

    <Border CornerRadius="15" BorderBrush="Black" BorderThickness="1" Padding="4" Background="Black">
        
        <Grid Margin="5,5,1,0" Height="201" VerticalAlignment="Top">
            <Grid.Background>
                <ImageBrush ImageSource="/Connect/neon_beach_round_window.png"/>
            </Grid.Background>
            <Button x:Name="btn_ConnectJoin" Content="Join Group" HorizontalAlignment="Center" Margin="0,167,0,0" Width="80" Background="#CC000000" Foreground="White" Click="btn_Connect_Click" Height="24" VerticalAlignment="Top"/>
            <Label x:Name="ConnectUserNamelbl" Content="Username:" HorizontalAlignment="Center" Margin="0,51,0,0" VerticalAlignment="Top" Foreground="White"/>
            <Label x:Name="ConnectGroupNamelbl" Content="Group ID:" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top" Foreground="White" Height="24"/>
            <Label x:Name="Maplelbl" Content="MapleRoll" HorizontalAlignment="Center" VerticalAlignment="Top" Height="26" Width="92" Foreground="White" FontSize="16" FontWeight="Black" FontFamily="Britannic Bold" HorizontalContentAlignment="Center" Background="#00000000" Margin="0,2,0,0"/>
            <Label x:Name="LootDistrLbl" Content="Loot Distribution Assistant" HorizontalAlignment="Center" Margin="0,18,0,0" VerticalAlignment="Top" Foreground="White" FontSize="9"/>
            <Button x:Name="btn_ConnectNew" Content="Create Group" HorizontalAlignment="Center" Width="80" Background="#CC000000" Foreground="White" Height="24" VerticalAlignment="Top" Click="btn_ConnectNew_Click" Margin="0,95,0,0"/>
            <Button Content="" HorizontalAlignment="Left" Margin="173,-5,0,0" VerticalAlignment="Top" Click="Button_Click" Height="19" Width="21" BorderBrush="#00707070" AutomationProperties.HelpText="Close App">
                <Button.Background>
                    <ImageBrush ImageSource="/Connect/Clsoe button.png"/>
                </Button.Background>
            </Button>
            <TextBox x:Name="txb_GroupId" HorizontalAlignment="Center" Margin="0,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" ToolTip="UserName" Background="#7F272727" Foreground="#FFF8F8F8" HorizontalContentAlignment="Center" MaxLength="6" KeyUp="txb_GroupId_KeyUp" CharacterCasing="Upper"/>
            <TextBox x:Name="txb_UserName" HorizontalAlignment="Center" Margin="0,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" ToolTip="UserName" Background="#7F272727" Foreground="#FFF8F8F8" Height="18" HorizontalContentAlignment="Center" CharacterCasing="Upper" MaxLength="12" KeyUp="txb_UserName_KeyUp"/>

        </Grid>
        
    </Border>
    
</Window>
