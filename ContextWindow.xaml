<Window x:Class="MapleRoll2.ContextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapleRoll2"
        mc:Ignorable="d"
        Title="ContextWindow"   Height="81" Width="100" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="False" IsTabStop="False" Background="{x:Null}"  MouseLeave="Window_MouseLeave" BorderThickness="0.5,0.5,0.5,0.5" ScrollViewer.VerticalScrollBarVisibility="Disabled" WindowStyle="None" AllowsTransparency="True" MouseEnter="Window_MouseEnter">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Border CornerRadius="15" BorderBrush="White" BorderThickness=".5,.5,.5,.5" Padding="4" Background="Black">


        <Grid>

            <Button x:Name="btn_VoteToKick" Content="Vote To Kick" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top" Width="86" Background="#00DDDDDD" Foreground="White" BorderBrush="Transparent" BorderThickness="0.5,0.5,0.5,0.5" Click="btn_VoteToKick_Click"/>
            <Button x:Name="btn_SendPM" Content="Send Message" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="86" Background="#00DDDDDD" Foreground="White" BorderBrush="#00000000" BorderThickness="0.5,0.5,0.5,0.5" Click="btn_SendPM_Click"/>
            <Label x:Name="lbl_ContextSelectedUser" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FF00B8FF" Height="25" Margin="0,-3,0,0" Width="58" FontWeight="Bold"/>
        </Grid>
    </Border>
</Window>
